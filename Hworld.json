{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "width": 475,
    "height": 300,

    "title": {
        "text": "World Map",
        "anchor": "start",
        "color": "black"},
  
    "data":{
      "url": "https://raw.githubusercontent.com/ke19306/ke19306.github.io/main/worldmap.json",
      "format":{"property": "features"}},
  
          "projection":{
              "type":"naturalEarth1"
          },

                    "transform":[
            {
                "lookup":"properties.name",
                "from":{
                    "data":{
                        "url":"https://raw.githubusercontent.com/ke19306/ke19306.github.io/main/h_gdp.csv"},
                    "key":"Country Name",
                    "fields":["2019"]
                    }
                }
          ],
  
          "mark":{
              "type":"geoshape",
              
              "stroke": "lightgrey",
              "strokeWidth": 2
          },
  
          "encoding":{
              "tooltip":[{"field":"properties.name", "type": "nominal", "title": "Country"}, {"field":"2019"}],

              
                 "color":{
                "field": "2019",
                "title": "%GDP",
                "type": "quantitative",
                "scale":{"scheme":"blues"}
          }
          }
          }
  

  
